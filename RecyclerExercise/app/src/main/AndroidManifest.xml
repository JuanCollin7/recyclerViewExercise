<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jc.recyclerexercise">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecyclerExercise">
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.posts.PostsActivity"/>
        <activity android:name=".ui.comments.CommentsActivity"/>
        <activity android:name=".ui.todos.ToDosActivity"/>
        <activity android:name=".ui.users.UsersActivity"/>
        <activity android:name=".ui.albums.AlbumsActivity"/>
        <activity android:name=".ui.photos.PhotosActivity"/>

        <activity android:name=".ui.posts.PostDetailActivity"/>
        <activity android:name=".ui.comments.CommentDetailActivity"/>
        <activity android:name=".ui.todos.ToDoDetailActivity"/>
        <activity android:name=".ui.users.UserDetailActivity"/>
        <activity android:name=".ui.albums.AlbumDetailActivity"/>
        <activity android:name=".ui.photos.PhotoDetailActivity"/>
    </application>

</manifest>